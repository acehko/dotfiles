#!/usr/bin/env zsh

# General config

# Disable beep on errors
setopt nobeep
# Writing a directory name will 'cd' into it
setopt autocd
# Enables extra file matchig patterns
setopt extendedglob
# Allows redirecting output to multiple files
setopt multios
# Prompt misspelled command correction
setopt correct
# Allow comments in the shell
setopt interactivecomments
