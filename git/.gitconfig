[core]
    editor       = nvim
    excludesfile = ~/.gitignore_global
	askpass =

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[alias]

    # Checkout
    co     = checkout
    cob    = checkout -b
    master = checkout master

    # Branch
    b  = branch
    bd = branch -d

    # Status
    s  = status --short
    ss = status

    # Commit
    c    = commit
    ca   = !git add -A && git commit
    cm   = commit -m
    wip  = !git add -A && git commit -m "WIP"
    undo = reset HEAD~

    # Diff
    d = difftool

    # Log
    l = log --oneline

    # Restore
    restore = checkout --

    # Last commit
    last = "!f() { if [[ $1 == 'show' ]]; then git show HEAD; else git log --stat 'HEAD^..HEAD'; fi }; f"
