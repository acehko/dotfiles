# Kubernetes Deployment
snippet Deployment
alias dep
    ---
    apiVersion: apps/v1beta2
    kind: Deployment
    metadata:
      name: ${1:name}
      namespace: ${2:default}
      labels:
        app: ${3:$1}
    spec:
      replicas: ${4:1}
      selector:
        matchLabels:
          app: $3
      template:
        metadata:
          labels:
            app: $3
        spec:
          containers:
            - name: ${4:$3}
              image: ${5:image}

# Kubernetes Service
snippet Service
alias svc
    ---
    apiVersion: v1
    kind: Service
    metadata:
      name: ${1:name}
      namespace: ${2:default}
      labels:
        app: ${3:$1}
    spec:
      selector:
        app: $3
      ports:
        - port: ${4:8080}

# Kubernetes StatefulSet
snippet StatefulSet
alias ss
    ---
    apiVersion: apps/v1beta2
    kind: StatefulSet
    metadata:
      name: ${1:name}
      namespace: ${2:default}
      labels:
        app: ${3:$1}
    spec:
      replicas: ${4:1}
      serviceName: ${5:service}
      selector:
        matchLabels:
          app: $3
      template:
        metadata:
          labels:
            app: $3
        spec:
          containers:
            - name: ${6:$3}
              image: ${7:image}
              volumeMounts:
                - name: ${8:name}
                  mountPath: ${9:path}
      volumeClaimTemplates:
        - metadata:
            name: $8
          spec:
            accessModes:
              - ${10:ReadWriteOnce}
            resources:
              requests:
                storage: ${11:1Gi}

