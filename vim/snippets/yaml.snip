# Kubernetes ConfigMap
snippet ConfigMap
alias cm
    ---
    apiVersion: v1
    kind: ConfigMap
    metadata:
      name: ${1:name}
      namespace: ${2:default}
      labels:
        app: ${3:$1}
    data:
      ${4:file}: |-
        ${5:content}

# Kubernetes PodDisruptionBudget
snippet PodDisruptionBudget
alias pdb
    ---
    apiVersion: policy/v1beta1
    kind: PodDisruptionBudget
    metadata:
      name: ${1:name}
      namespace: ${2:default}
    spec:
      minAvailable: ${3:1}
      selector:
        matchLabels:
          app: ${4:$1}

