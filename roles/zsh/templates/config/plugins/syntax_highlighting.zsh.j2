#!/usr/bin/env zsh

# Syntax Highlighting config.

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets)

ZSH_HIGHLIGHT_STYLES[unknown-token]=fg={{ dotfiles_color.term.red }}
ZSH_HIGHLIGHT_STYLES[reserved-word]=fg={{ dotfiles_color.term.yellow }}
ZSH_HIGHLIGHT_STYLES[precommand]=fg=none
ZSH_HIGHLIGHT_STYLES[commandseparator]=fg={{ dotfiles_color.term.yellow }}
ZSH_HIGHLIGHT_STYLES[path]=none
ZSH_HIGHLIGHT_STYLES[globbing]=none
ZSH_HIGHLIGHT_STYLES[back-quoted-argument]=fg={{ dotfiles_color.term.green }}
ZSH_HIGHLIGHT_STYLES[single-quoted-argument]=fg={{ dotfiles_color.term.green }}
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]=fg={{ dotfiles_color.term.green }}
ZSH_HIGHLIGHT_STYLES[dollar-double-quoted-argument]=fg={{ dotfiles_color.term.white }}
ZSH_HIGHLIGHT_STYLES[back-double-quoted-argument]=fg={{ dotfiles_color.term.white }}
ZSH_HIGHLIGHT_STYLES[redirection]=fg={{ dotfiles_color.term.yellow }}
ZSH_HIGHLIGHT_STYLES[arg0]=fg={{ dotfiles_color.term.blue }}

ZSH_HIGHLIGHT_STYLES[bracket-error]=fg={{ dotfiles_color.term.red }}
ZSH_HIGHLIGHT_STYLES[bracket-level-1]=fg={{ dotfiles_color.term.blue }}
ZSH_HIGHLIGHT_STYLES[bracket-level-2]=fg={{ dotfiles_color.term.blue }}
ZSH_HIGHLIGHT_STYLES[bracket-level-3]=fg={{ dotfiles_color.term.blue }}
ZSH_HIGHLIGHT_STYLES[bracket-level-4]=fg={{ dotfiles_color.term.blue }}
ZSH_HIGHLIGHT_STYLES[bracket-level-5]=fg={{ dotfiles_color.term.blue }}
