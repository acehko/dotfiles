live_config_reload: true

font:
  normal:
    family: Hack Nerd Font
    style: Regular
  size: 12

colors:
  primary:
    background: "#{{ dotfiles_color.gui.background }}"
    foreground: "#{{ dotfiles_color.gui.foreground }}"

  normal:
    black:   "#{{ dotfiles_color.gui.black }}"
    red:     "#{{ dotfiles_color.gui.red }}"
    green:   "#{{ dotfiles_color.gui.green }}"
    yellow:  "#{{ dotfiles_color.gui.yellow }}"
    blue:    "#{{ dotfiles_color.gui.blue }}"
    magenta: "#{{ dotfiles_color.gui.magenta }}"
    cyan:    "#{{ dotfiles_color.gui.cyan }}"
    white:   "#{{ dotfiles_color.gui.white }}"

  bright:
    black:   "#{{ dotfiles_color.gui.bright_black }}"
    red:     "#{{ dotfiles_color.gui.bright_red }}"
    green:   "#{{ dotfiles_color.gui.bright_green }}"
    yellow:  "#{{ dotfiles_color.gui.bright_yellow }}"
    blue:    "#{{ dotfiles_color.gui.bright_blue }}"
    magenta: "#{{ dotfiles_color.gui.bright_magenta }}"
    cyan:    "#{{ dotfiles_color.gui.bright_cyan }}"
    white:   "#{{ dotfiles_color.gui.bright_white }}"

window:
  startup_mode: Maximized

  padding:
    x: 5
    y: 5

key_bindings:
  - {key: Slash,  mods: Control, chars: "\x1f"}
  - {key: Return, mods: Control, chars: "\x1bM"}

  - {key: Left,  mods: Command, chars: "\x1bOH", mode: AppCursor}
  - {key: Right, mods: Command, chars: "\x1bOF", mode: AppCursor}

  - {key: T,      mods: Command,       command: {program: '/opt/homebrew/bin/tmux', args: ['new-window', '-c', '#{pane_current_path}']}}
  - {key: W,      mods: Command,       command: {program: '/opt/homebrew/bin/tmux', args: ['kill-pane']}}
  - {key: D,      mods: Command,       command: {program: '/opt/homebrew/bin/tmux', args: ['split-window', '-h', '-c', '#{pane_current_path}']}}
  - {key: Tab,    mods: Control,       command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-n']}}
  - {key: Tab,    mods: Control|Shift, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-p']}}
  - {key: Grave,  mods: Control,       command: {program: '/opt/homebrew/bin/tmux', args: ['select-pane', '-t', ':.+']}}
  - {key: Return, mods: Command,       command: {program: '/opt/homebrew/bin/tmux', args: ['resize-pane', '-Z']}}

  - {key: Key1, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '1']}}
  - {key: Key2, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '2']}}
  - {key: Key3, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '3']}}
  - {key: Key4, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '4']}}
  - {key: Key5, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '5']}}
  - {key: Key6, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '6']}}
  - {key: Key7, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '7']}}
  - {key: Key8, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '8']}}
  - {key: Key9, mods: Command, command: {program: '/opt/homebrew/bin/tmux', args: ['select-window', '-t', '9']}}

  - {key: H, mods: Control|Shift, command: {program: '/opt/homebrew/bin/tmux', args: ['select-pane', '-L']}}
  - {key: J, mods: Control|Shift, command: {program: '/opt/homebrew/bin/tmux', args: ['select-pane', '-D']}}
  - {key: K, mods: Control|Shift, command: {program: '/opt/homebrew/bin/tmux', args: ['select-pane', '-U']}}
  - {key: L, mods: Control|Shift, command: {program: '/opt/homebrew/bin/tmux', args: ['select-pane', '-R']}}

env:
  TERM: screen-256color
